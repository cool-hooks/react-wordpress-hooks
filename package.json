{
  "name": "react-wordpress-hooks",
  "version": "1.0.0",
  "description": "Set of hooks for WordPress REST API",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-wordpress-hooks.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "deploy": "gh-pages -d .docz/dist",
    "lint": "eslint 'src/**/*.tsx' --fix",
    "prettier": "prettier --write 'src/**/*.tsx'",
    "docz:dev": "docz dev",
    "docz:build": "docz build --base /react-wordpress-hooks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-wordpress-hooks.git"
  },
  "keywords": [
    "WordPress",
    "hooks",
    "React",
    "library",
    "REST",
    "API"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-wordpress-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-wordpress-hooks#readme",
  "devDependencies": {
    "@types/react": "^16.9.1",
    "@typescript-eslint/parser": "^2.0.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
